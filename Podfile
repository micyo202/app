platform :ios, '12.0'

inhibit_all_warnings!                       # 全局禁止显示警告

target 'app' do

pod 'YZFrame', '~> 1.3.2'                   # YZ敏捷开发类库（包含YZAuthID、YYKit、MBProgressHUD、SVProgressHUD）
pod 'AvoidCrash', '~> 2.5.2'                # 防止 NSArray、NSDictionary 崩溃闪退
pod 'UIAlertController+Blocks', '~> 0.9.2'  # Alert弹框
pod 'CustomIOSAlertView', '~> 0.9.5'        # 自定义对话弹框视图
pod 'TYAlertController', '~> 1.2.0'         # 弹出控制器
pod 'LCActionSheet', '~> 3.5.4'             # 底部弹出选择列表
pod 'ActionSheetPicker-3.0', '~> 2.7.1'     # 底部弹出选择器
pod 'JDStatusBarNotification', '~> 1.6.1'   # 状态栏提醒
pod 'YBPopupMenu', '~> 1.1.7'               # pop菜单
pod 'MJRefresh', '~> 3.5.0'                 # 下拉刷新、上拉加载
pod 'WRNavigationBar', '~> 1.2.0'           # 顶部导航栏
pod 'CYLTabBarController', '~> 1.29.0'      # 底部选项卡
pod 'TZImagePickerController', '~> 3.5.8'   # 相册选择器
pod 'WMPageController', '~> 2.5.2'          # 滑动切换界面
pod 'SDCycleScrollView', '~> 1.82'          # 轮播图（包含SDWebImage）
pod 'AFNetworking', '~> 4.0.1'              # 网络访问库
pod 'ReactiveObjC', '~> 3.1.1'              # RAC响应式编程框架
pod 'Masonry', '~> 1.1.0'                   # 纯代码自适应布局
pod 'SGQRCode', '~> 3.0.1'                  # 二维码

end
